<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="50.0" prefWidth="200.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.ControleurBarreOutils">
   <children>
      <Button fx:id="btnParametres" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#handleOptions">
         <graphic>
            <ImageView fitHeight="32.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../ressources/settings-icon-2.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="btnAide" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#handleAide">
         <graphic>
            <ImageView fitHeight="32.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../ressources/aide.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="btnQuitter" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#handleQuitter">
         <graphic>
            <ImageView fitHeight="32.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../ressources/exit.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="btnPlay" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#handleJouer">
         <graphic>
            <ImageView fitHeight="32.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../ressources/play.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
